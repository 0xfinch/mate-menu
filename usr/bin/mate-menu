#!/usr/bin/env python

import sys, os

if len(sys.argv) > 1:
    if (sys.argv[1] in ["help", "h", "-?", "--help", "-h", "?"]):
        print "MATE Menu - advanced MATE menu\n"
        print "options:"
        print " [--]help, [-]h Display this help."
        print " [--]clean, [--]clear, [--]reset Restore settings to default.\n"
    elif (sys.argv[1] in ["clean", "clear", "reset", "--clean", "--clear", "--reset"]):
        os.system("gsettings reset-recursively org.ubuntu-mate.matemenu")
        os.system("gsettings reset-recursively org.ubuntu-mate.matemenu.plugins.places")
        os.system("gsettings reset-recursively org.ubuntu-mate.matemenu.plugins.applications")
        os.system("gsettings reset-recursively org.ubuntu-mate.matemenu.plugins.recent")
        os.system("gsettings reset-recursively org.ubuntu-mate.matemenu.plugins.system_management")
        os.system("rm -rf ~/.config/mate-menu")
        print "All MATE Menu settings are now restored to default"
else:
    os.system("/usr/lib/ubuntu-mate/mate-menu/mate-menu.py")
